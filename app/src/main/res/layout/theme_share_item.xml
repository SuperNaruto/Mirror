<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/all_type_all_width"
        android:layout_height="@dimen/all_type_image_height"
        android:layout_marginLeft="@dimen/all_type_all_left"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/all_type_share_iv"
            android:layout_width="@dimen/all_type_all_width"
            android:layout_height="@dimen/all_type_image_height" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_type_share_item_height"
                android:layout_marginLeft="@dimen/all_type_content_left"
                android:layout_marginRight="@dimen/all_type_content_right"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/all_type_image_top"
                    android:src="@mipmap/blackline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/all_type_share_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/all_type_fina_text"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/all_type_final_textSize" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>