<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/all_type_all_width"
        android:layout_height="@dimen/all_type_image_height"
        android:layout_marginLeft="@dimen/all_type_all_left"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/all_type_iv"
            android:layout_width="@dimen/all_type_all_width"
            android:layout_height="@dimen/all_type_image_height" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_type_content_height"
                android:layout_marginLeft="@dimen/all_type_content_left"
                android:layout_marginRight="@dimen/all_type_content_right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/all_type_price_top"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/all_type_goods_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/all_type_goods_name_marginLeft"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/all_type_textSize"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/all_type_goods_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/all_type_goods_name_marginRight"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/all_type_textSize"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/all_type_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/all_type_goods_price"
                            android:src="@mipmap/mymoney" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/all_type_area_marginTop">

                    <TextView
                        android:id="@+id/all_type_product_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/all_type_goods_name_marginLeft"
                        android:textSize="@dimen/all_type_france_textSize" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/all_type_image_top"
                    android:src="@mipmap/blackline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/all_type_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/all_type_fina_text"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/all_type_final_textSize" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>