    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".welcome.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.MainActivity" />
        <activity android:name=".details.GoodsDetailsActivity" />
        <activity android:name=".details.WearAtlasActivity" />
        <activity
            android:name=".toolclass.jcvideoplayer_lib.JCFullScreenActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape" />
        <activity android:name=".details.WearAtlasDetailsActivity" />
        <activity android:name=".themeshare.ThemeShareActivity" />
        <activity android:name=".Login.LoginActivity" />
        <activity android:name=".Login.CreateAccountActivity" />
        <activity android:name=".shoppingcart.OrderDetailsActivity" />
        <activity android:name=".details.WearAtlasDetailsActivity" />
        <activity android:name=".themeshare.ThemeShareActivity" />
        <activity android:name=".Login.LoginActivity" />
        <activity android:name=".Login.CreateAccountActivity" />
        <activity android:name=".shoppingcart.OrderDetailsActivity" />


        <activity
            android:name="com.mob.tools.MobUIShell"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize">

            <intent-filter>
                <data android:scheme="tencent100371282" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".shoppingcart.AddressActivity" />
        <activity android:name=".shoppingcart.AddAddressActivity" />
        <activity android:name=".shoppingcart.EditAddressActivity" />

    </application>


</manifest>
