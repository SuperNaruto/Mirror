<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vdllo.mirror">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".welcome.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.MainActivity" />
        <activity android:name=".themeshare.ThemeShareActivity" />
        <activity android:name=".details.GoodsDetailsActivity" />
        <activity android:name=".details.WearAtlasActivity" />
        <activity
            android:name=".toolclass.jcvideoplayer_lib.JCFullScreenActivity"
            android:configChanges="orientation|keyboardHidden"
        android:screenOrientation="landscape" />
    </application>


</manifest>
